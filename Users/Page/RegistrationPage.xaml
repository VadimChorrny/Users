<Page x:Class="Users.Page.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Users.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage" Background="White">

    <Grid  HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="Enter login" FontSize="30" />
            <TextBox x:Name="txtLogin" FontSize="30" MaxLength="50"/>
            <TextBlock Text="Enter password" FontSize="30"/>
            <TextBox x:Name="txtPassword" FontSize="30" MaxLength="100"/>

            <Button Content="Registration" FontSize="30" Margin="0 30 0 0" Click="Button_Click"/>
            <CheckBox x:Name="checkboxIsAdmin" Content="Make Admin" FontSize="10" Margin="0 10 0 0" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>
